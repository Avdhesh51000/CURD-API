<% if current_user %>
<h3 align = RIGHT><%= link_to "logout now" ,logout_path(current_user)%> </h3>
<b>Welcome User </b> 
<br>
<br>

<h3> Listing All Movies</h3>
<table border="1">
  <tr>
    <th>Movie Name</th>
    <th>Movie Images</th>
    <th>Operations</th>
    <th>Likes</th>
    <th>Dislikes</th>

  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.mname %></td>
      <td>   <%= image_tag movie_serve_path(movie) %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= movie.like %> &nbsp <%= link_to "like me", like_path(movie) %></td>
      <td><%= movie.dislike %> &nbsp <%= link_to "dislike me", dislike_path(movie) %></td>
    </tr>
  <% end %>
</table>
<br>
<br>
<b>  <%= link_to "Post a new Movies", new_movie_path %> </b>
<% else %>
<%= render 'movies/logout' %>
<% end %>